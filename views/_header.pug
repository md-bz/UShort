header.header 
    nav.nav
        a.nav__el(href="/") UShort
    //- .header__logo 
    //-     img(src="/img/logo-white.png", alt="UShort logo")
    nav.nav.nav--user 
        if user
            a#logout.nav__el.nav__el--logout Log out
            a.nav__el(href="/me") 
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`${user.name} photo`)
                span= user.name.split(" ")[0]
        else                
            a.sign-in(href="/signup") Sign up
            a.login(href="/login") Log in